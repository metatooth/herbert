{
  "name": "herbert",
  "version": "0.18.0",
  "description": "Control your grow environment.",
  "main": "index.js",
  "engines": {
    "node": "14.16.1"
  },
  "scripts": {
    "test": "NODE_ENV=unit_test jest",
    "clean": "rm -rf dist",
    "lint": "vue-cli-service lint",
    "serve:client": "vue-cli-service serve src/client/main.ts",
    "serve:server": "tsc-watch --noClear -b ./src/server/tsconfig.json --onSuccess \"node --enable-source-maps dist/server/main.js\"",
    "serve:worker": "tsc-watch --noClear -b ./src/worker/tsconfig.json --onSuccess \"node --enable-source-maps dist/worker/main.js\"",
    "start": "node index.js",
    "copy:favicon": "cp src/server/favicon.ico dist/server/",
    "build:client": "vue-cli-service build src/client/main.ts",
    "build:server": "tsc -b src/server && npm run copy:favicon",
    "build:worker": "tsc -b src/worker",
    "serve": "concurrently --prefix \"[{name}]\" --names \"CLIENT,SERVER,WORKER\" -c \"bgBlue.bold,bgGreen.bold,bgRed.bold\"  \"npm run serve:client\" \"npm run serve:server\" \"npm run serve:worker\"",
    "build": "concurrently --prefix \"[{name}]\" --names \"CLIENT,SERVER,WORKER\" -c \"bgBlue.bold,bgGreen.bold,bgRed.bold\"  \"npm run build:client\" \"npm run build:server\" \"npm run build:worker\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metatooth/herbert.git"
  },
  "license": "MIT",
  "author": "Terry Lorber",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/vue-fontawesome": "^2.0.2",
    "@types/node": "^14.14.41",
    "axios": "^0.18.1",
    "body-parser": "^1.19.0",
    "bulma": "^0.9.2",
    "chart.js": "^2.9.4",
    "chartjs-adapter-date-fns": "^1.0.0",
    "config": "^3.3.3",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "date-fns": "^2.17.0",
    "date-fns-timezone": "^0.1.4",
    "date-fns-tz": "^1.1.3",
    "express": "^4.17.1",
    "express-promise-router": "^4.0.1",
    "log4js": "^6.3.0",
    "node-switchbot": "^1.0.0",
    "onoff": "^6.0.1",
    "pg": "^8.5.1",
    "serve-favicon": "^2.5.0",
    "tslib": "^2.1.0",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.3",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.5.1",
    "vuex": "^3.6.2",
    "ws": "^7.4.3",
    "wyze-node": "^2.0.3"
  },
  "devDependencies": {
    "@types/config": "0.0.38",
    "@types/cors": "^2.8.5",
    "@types/jest": "^26.0.23",
    "@types/pg": "^8.5.1",
    "@types/serve-favicon": "^2.5.2",
    "@types/ws": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "concurrently": "^5.3.0",
    "css-loader": "^5.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "html-webpack-plugin": "^5.0.0",
    "jest": "^27.0.4",
    "node-sass": "^5.0.0",
    "prettier": "^1.19.1",
    "sass-loader": "^10.1.1",
    "ts-jest": "^27.0.3",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.4",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.46.0"
  }
}
